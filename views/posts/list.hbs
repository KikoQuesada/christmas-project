{{#each posts as |post| }}
    {{#with post }}
        <div class="card mb-3">
            <img src={{ post.image }} class="card-img-top" alt="post-image">
            <div class="card-body">
                <h5 class="card-title">{{ post.title }}</h5>
                <p class="card-text">{{post.text}}</p>
            </div>
        </div>
    {{/with}}
{{/each}}